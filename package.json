  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=14.17.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsnd --respawn ./src/index.ts",
    "build": "cross-env NODE_ENV=development tsc --project ./tsconfig.json",
    "lint": "yarn lint:type && yarn lint:eslint && yarn lint:prettier",
    "lint:type": "tsc --noEmit",
    "lint:eslint": "eslint '**/*.{js,ts}'",
    "lint:prettier": "prettier --check '**/*.{js,ts,md,yml,yaml,html,json}'"
  },
  "dependencies": {
    "apollo-server": "2.25.1",
    "graphql": "15.5.0"
  },
  "devDependencies": {
    "@types/node": "15.12.1",
    "@typescript-eslint/eslint-plugin": "4.28.0",
    "@typescript-eslint/parser": "4.28.0",
    "cross-env": "7.0.3",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "prettier": "2.3.1",
    "ts-node-dev": "1.1.6",
    "typescript": "4.3.2"
  }
}
